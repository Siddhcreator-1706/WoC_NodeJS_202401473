{
    "version": 2,
    "rewrites": [
        {
            "source": "/auth/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/notes/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/notes",
            "destination": "/api/index"
        },
        {
            "source": "/test",
            "destination": "/api/index"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/dist/index.html"
        }
    ]
}