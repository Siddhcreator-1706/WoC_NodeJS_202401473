{
    "version": 2,
    "rewrites": [
        {
            "source": "/auth/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/notes/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/admin/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/test",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}